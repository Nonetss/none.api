{
  "name": "openapi-explorer-mcp",
  "version": "1.0.5",
  "description": "Professional OpenAPI Explorer MCP server",
  "private": true,
  "type": "module",
  "bin": {
    "openapi-explorer": "build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && tsc-alias && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "husky",
    "watch": "tsc --watch & tsc-alias --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "lint-staged": {
    "src/**/*.{ts,js,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "@modelcontextprotocol/sdk": "0.6.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.13.2",
    "axios-cookiejar-support": "^6.0.5",
    "tough-cookie": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/tough-cookie": "^4.0.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.3.3"
  }
}
